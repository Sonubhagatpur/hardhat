        uint256 tokenIndex = _ownedTokensIndex[tokenId];

        // When the token to delete is the last token, the swap operation is unnecessary
        if (tokenIndex != lastTokenIndex) {
            uint256 lastTokenId = _ownedTokens[from][lastTokenIndex];

            _ownedTokens[from][tokenIndex] = lastTokenId; // Move the last token to the slot of the to-delete token
            _ownedTokensIndex[lastTokenId] = tokenIndex; // Update the moved token's index
        }

        // This also deletes the contents at the last position of the array
        delete _ownedTokensIndex[tokenId];
        delete _ownedTokens[from][lastTokenIndex];
    }

    /**
     * @dev Private function to remove a token from this extension's token tracking data structures.
     * This has O(1) time complexity, but alters the order of the _allTokens array.
     * @param tokenId uint256 ID of the token to be removed from the tokens list
     */
    function _removeTokenFromAllTokensEnumeration(uint256 tokenId) private {
        // To prevent a gap in the tokens array, we store the last token in the index of the token to delete, and
        // then delete the last slot (swap and pop).

        uint256 lastTokenIndex = _allTokens.length - 1;
        uint256 tokenIndex = _allTokensIndex[tokenId];

        // When the token to delete is the last token, the swap operation is unnecessary. However, since this occurs so
        // rarely (when the last minted token is burnt) that we still do the swap here to avoid the gas cost of adding
        // an 'if' statement (like in _removeTokenFromOwnerEnumeration)
        uint256 lastTokenId = _allTokens[lastTokenIndex];

        _allTokens[tokenIndex] = lastTokenId; // Move the last token to the slot of the to-delete token
        _allTokensIndex[lastTokenId] = tokenIndex; // Update the moved token's index

        // This also deletes the contents at the last position of the array
        delete _allTokensIndex[tokenId];
        _allTokens.pop();
    }

    /**
     * See {ERC721-_increaseBalance}. We need that to account tokens that were minted in batch
     */
    function _increaseBalance(address account, uint128 amount)
        internal
        virtual
        override
    {
        if (amount > 0) {
            revert ERC721EnumerableForbiddenBatchMint();
        }
        super._increaseBalance(account, amount);
    }
}

abstract contract Pausable is Context {
    event Paused(address account);

    event Unpaused(address account);

    bool private _paused;

    constructor() {
        _paused = false;
    }

    modifier whenNotPaused() {
        _requireNotPaused();
        _;
    }

    modifier whenPaused() {
        _requirePaused();
        _;
    }

    function paused() public view virtual returns (bool) {
        return _paused;
    }

    function _requireNotPaused() internal view virtual {
        require(!paused(), "Pausable: paused");
    }

    function _requirePaused() internal view virtual {
        require(paused(), "Pausable: not paused");
    }

    function _pause() internal virtual whenNotPaused {
        _paused = true;
        emit Paused(_msgSender());
    }

    function _unpause() internal virtual whenPaused {
        _paused = false;
        emit Unpaused(_msgSender());
    }
}

contract WorldMarket is ERC721Enumerable, Ownable, Pausable {
    uint256 public mintFeePercentage;
    uint256 public marketplaceFeePercentage;
    uint256 public royaltyFeePercentage;
    IERC20 public token;

    address public paymentWallet;

    // Events
    event UserAddedToBlacklist(address indexed user);
    event UserRemovedFromBlacklist(address indexed user);
    event NFTListed(uint256 tokenId, address seller, uint256 price);
    event NFTPurchased(uint256 tokenId, address buyer, uint256 price);
    event NFTSaleStatusUpdated(uint256 indexed tokenId, address indexed owner, bool isForSale);

    constructor() ERC721("World Market", "WMTx") Ownable(msg.sender) {
        token = IERC20(address(this));
        paymentWallet = _msgSender();
    }

    struct Nfts {
        address creator;
        uint256 price;
        bool sell;
    }

    mapping(uint256 => Nfts) public NftInfo;
    mapping(address => bool) public isBlacklisted;
    address[] allBlacklistedAddresses;

    function pause() external onlyOwner returns (bool success) {
        _pause();
        return true;
    }

    function unpause() external onlyOwner returns (bool success) {
        _unpause();
        return true;
    }

    function addToBlacklist(address _user) public onlyOwner {
        require(!isBlacklisted[_user], "user already blacklisted");
        isBlacklisted[_user] = true;
        allBlacklistedAddresses.push(_user);
        emit UserAddedToBlacklist(_user);
    }

    function removeFromBlacklist(address _user) public onlyOwner {
        require(isBlacklisted[_user], "user already whitelisted");
        for (uint256 i = 0; i < allBlacklistedAddresses.length; i++) {
            if (allBlacklistedAddresses[i] == _user) {
                allBlacklistedAddresses[i] = allBlacklistedAddresses[
                    allBlacklistedAddresses.length - 1
                ];
                allBlacklistedAddresses.pop();
                break;
            }
        }
        isBlacklisted[_user] = false;
        emit UserRemovedFromBlacklist(_user);
    }

    function mintNFTByAdmin(
        string memory _tokenURI,
        uint256 tokenId,
        uint256 price
    ) public onlyOwner {
        _safeMint(msg.sender, tokenId);
        _setTokenURI(tokenId, _tokenURI);
        NftInfo[tokenId] = Nfts({
            creator: _msgSender(),
            price: price,
            sell: true
        });
        emit NFTListed(tokenId, msg.sender, price);
    }

    function mintNFT(
        string memory _tokenURI,
        uint256 tokenId,
        uint256 price
    ) public payable whenNotPaused {
        require(!isBlacklisted[msg.sender], "caller is backlisted");
         uint256 mintFee = (price * mintFeePercentage) / 100;
        require(msg.value >= mintFee, "Insufficient mint fee");
        payable(paymentWallet).transfer(mintFee);
        _safeMint(msg.sender, tokenId);
        _setTokenURI(tokenId, _tokenURI);
        NftInfo[tokenId] = Nfts({
            creator: _msgSender(),
            price: price,
            sell: true
        });
        // Refund the excess balance
        uint256 excessAmount = msg.value - mintFee;
        if (excessAmount > 0) {
            payable(msg.sender).transfer(excessAmount);
        }
        emit NFTListed(tokenId, msg.sender, price);
    }

    function listNFTForResale(uint256 tokenId, uint256 price) public whenNotPaused {
        require(!isBlacklisted[msg.sender], "caller is backlisted");
        require(ownerOf(tokenId) == _msgSender(), "you are not the owner");
        approve(address(this), tokenId);
        NftInfo[tokenId].price = price;
        NftInfo[tokenId].sell = true;
        emit NFTListed(tokenId, msg.sender, price);
    }

    function toggleNFTSale(uint256 tokenId, bool isForSale) public whenNotPaused {
        require(!isBlacklisted[msg.sender], "caller is blacklisted");
        require(ownerOf(tokenId) == _msgSender(), "you are not the owner");
        
        // Update the NFT sale status
        NftInfo[tokenId].sell = isForSale;
        
        emit NFTSaleStatusUpdated(tokenId, msg.sender, isForSale);
    }


    function buyNFT(uint256 tokenId) external payable whenNotPaused {
        require(!isBlacklisted[msg.sender], "caller is backlisted");
        Nfts storage nft = NftInfo[tokenId];
        require(ownerOf(tokenId) != _msgSender(), "owner can not buy");
        require(nft.sell, "NFT is not for sale");
        require(msg.value >= nft.price, "Insufficient balance sent");
         uint256 tax = (nft.price * marketplaceFeePercentage) / 100;
        uint256 royaltyFees = (nft.price * royaltyFeePercentage) / 100;
        if (tax > 0) payable(paymentWallet).transfer(tax);
        if (royaltyFees > 0) payable(nft.creator).transfer(royaltyFees);
        payable(ownerOf(tokenId)).transfer(nft.price - tax - royaltyFees);
        _transfer(ownerOf(tokenId), _msgSender(), tokenId);
        nft.sell = false;
        // Refund any excess amount if sent more than required
        uint256 excessAmount = msg.value - nft.price;
        if (excessAmount > 0) {
            payable(msg.sender).transfer(excessAmount);
        }
        emit NFTPurchased(tokenId, msg.sender, nft.price);
    }

    function withdraw() external onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }

    function withdrawTokens(address _token, uint256 _amount)
        external
        onlyOwner
    {
        require(_token != address(0), "token address is null");
        IERC20 newToken = IERC20(_token);
        require(
            _amount > 0 && newToken.balanceOf(address(this)) >= _amount,
            "Amount should not be zero or more than contract"
        );
        newToken.transfer(_msgSender(), _amount);
    }

    function changePaymentWallet(address _newPaymentWallet) public onlyOwner {
        require(_newPaymentWallet != address(0), "Null address");
        paymentWallet = _newPaymentWallet;
    }

    function setMintFees(uint256 _mintFees) public onlyOwner {
        require(_mintFees < 50, "Mint fees should be less than 50%");
        mintFeePercentage = _mintFees;
    }

    function setRoyaltyFees(uint256 _fees) public onlyOwner {
        require(_fees < 50, "Royalty fees should be less than 50%");
        royaltyFeePercentage = _fees;
    }

    function setSellRate(uint256 _sellRate) public onlyOwner {
        require(_sellRate < 50, "Sales tax should be less than 50%");
        marketplaceFeePercentage = _sellRate;
    }

    function getBlacklistedAddresses()
        external
        view
        returns (address[] memory)
    {
        return allBlacklistedAddresses;
    }

    function walletOfOwner(address _owner)
        public
        view
        returns (uint256[] memory)
    {
        uint256 ownerTokenCount = balanceOf(_owner);
        uint256[] memory tokenIds = new uint256[](ownerTokenCount);
        for (uint256 i; i < ownerTokenCount; i++) {
            tokenIds[i] = tokenOfOwnerByIndex(_owner, i);
        }
        return tokenIds;
    }
}