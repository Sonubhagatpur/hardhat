contract ERC721Token is ERC721Enumerable, Ownable {
    uint256 public MAX_MINT;
    uint256 public MAX_SUPPLY;
    uint256 public mintRate;
    uint256 public sellRate;

    uint256 private _currentIndex;

    uint256 private _burnCounter;

    string public baseURI;


    struct Nfts {
        address owner;
        uint256 price;
        bool sell;
    }

    mapping(uint256 => Nfts) public NftInfo;

    // Event to be emitted when settings are updated
    event SettingsUpdated(
        uint256 maxMint,
        uint256 maxSupply,
        uint256 mintRate,
        uint256 sellRate
    );

    constructor(
        string memory name, 
        string memory symbol, 
        string memory baseTokenURI, 
        address _userAddress,
        uint256 _maxSupply,
        uint256 _maxMint,
        uint256 _mintRate
        ) ERC721(name, symbol) Ownable(_userAddress) {
            require(_userAddress != address(0), "User address cannot be the zero address");
            require(_maxMint > 0, "Max mint should be greater than zero");
            require(_maxSupply > 0, "Max supply should be greater than zero");
            baseURI = baseTokenURI;
            _updateSettings(_maxMint, _maxSupply, _mintRate, 0);
            _currentIndex = _startTokenId();
    }


    function updateSettings(uint256 _maxMint,uint256 _maxSupply,uint256 _mintRate,uint256 _sellRate) external onlyOwner  {
        _updateSettings(_maxMint, _maxSupply, _mintRate, _sellRate);
    }

    function _updateSettings(
        uint256 _maxMint,
        uint256 _maxSupply,
        uint256 _mintRate,
        uint256 _sellRate
    ) private  {
        // First, check if at least one value is greater than zero
        require(
            _maxMint > 0 || _maxSupply > 0 || _mintRate > 0 || _sellRate > 0,
            "At least one value must be greater than zero."
        );
        
        // Update the settings based on the provided values
        if (_maxMint > 0) {
            MAX_MINT = _maxMint;
        }
        if (_maxSupply > 0) {
            MAX_SUPPLY = _maxSupply;
        }
        if (_mintRate > 0) {
            mintRate = _mintRate;
        }
        if (_sellRate > 0) {
            sellRate = _sellRate;
        }

        // Emit the event to log the updated settings
        emit SettingsUpdated(MAX_MINT, MAX_SUPPLY, mintRate, sellRate);
    }

     function mintAdmin(address userAddress, uint256 quantity) external onlyOwner {
        uint256 startTokenId = _currentIndex;
        require(userAddress != address(0), "Invalid address: Address cannot be the zero address");
        require(
            totalSupply() + quantity <= MAX_SUPPLY,
            "Not enough tokens left"
        );

        uint256 end = startTokenId + quantity;
        uint256 tokenId = startTokenId;
        do {
            _safeMint(userAddress, tokenId);
        } while (++tokenId != end);
        _currentIndex = end;
    }

    function mint(uint256 quantity) external payable {
        uint256 startTokenId = _currentIndex;
        require(
            quantity <= MAX_MINT,
            "Only 10 NFTs can be created in one transaction"
        );
        require(
            totalSupply() + quantity <= MAX_SUPPLY,
            "Not enough tokens left"
        );
        uint256 mintAmount = mintRate * quantity;
        require(msg.value >= mintAmount, "Not enough balance");
        uint256 leftAmount = msg.value - mintAmount;
        if (leftAmount > 0) payable(_msgSender()).transfer(leftAmount);
        payable(owner()).transfer(mintAmount);
        uint256 end = startTokenId + quantity;
        uint256 tokenId = startTokenId;
        do {
            _safeMint(msg.sender, tokenId);
        } while (++tokenId != end);
        _currentIndex = end;
    }

    function sellNFT(uint256 tokenId, uint256 amount) public {
        require(ownerOf(tokenId) == _msgSender(), "you are not the owner");
        approve(address(this), tokenId);
        NftInfo[tokenId] = Nfts({
            owner: _msgSender(),
            price: amount,
            sell: true
        });
    }

    function buyNFT(uint256 tokenId) external payable {
        Nfts storage nft = NftInfo[tokenId];
        require(ownerOf(tokenId) != _msgSender(), "owner can not buy");
        require(nft.sell, "It is not for sell");
        require(msg.value >= nft.price, "Min price");
        uint256 leftAmount = msg.value - nft.price;
        if (leftAmount > 0) payable(_msgSender()).transfer(leftAmount);
        uint256 tax = (nft.price * sellRate) / 100;
        if (tax > 0) payable(owner()).transfer(tax);
        payable(ownerOf(tokenId)).transfer(nft.price - tax);
        _transfer(ownerOf(tokenId), _msgSender(), tokenId);
        nft.sell = false;
    }

    function withdraw() external payable onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }

    function _baseURI() internal view override returns (string memory) {
        return baseURI;
    }

    function setMintRate(uint256 _mintRate) public onlyOwner {
        mintRate = _mintRate;
    }

    function setSellRate(uint256 _sellRate) public onlyOwner {
        require(_sellRate < 50, "Sales tax should be less than 50%");
        sellRate = _sellRate;
    }

    function walletOfOwner(
        address _owner
    ) public view returns (uint256[] memory) {
        uint256 ownerTokenCount = balanceOf(_owner);
        uint256[] memory tokenIds = new uint256[](ownerTokenCount);
        for (uint256 i; i < ownerTokenCount; i++) {
            tokenIds[i] = tokenOfOwnerByIndex(_owner, i);
        }
        return tokenIds;
    }

    function _startTokenId() internal view virtual returns (uint256) {
        return 1;
    }

    /**
     * @dev Returns the next token ID to be minted.
     */
    function _nextTokenId() internal view virtual returns (uint256) {
        return _currentIndex;
    }
}